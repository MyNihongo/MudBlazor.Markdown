@page "/"
@using MudBlazor.Markdown.Core.Services.Interfaces
@using Markdig.Syntax.Inlines

@*<MudMarkdown Value="@Value" TableCellMinWidth="100" OverrideLinkUrl="OverrideLink" />*@
<MudCodeHighlight/>

@code
{
	[Inject]
	private IMarkdownService? MarkdownService { get; init; }

	private string Value { get; set; } = string.Empty;

	protected override async Task OnInitializedAsync()
	{
		if (MarkdownService == null)
			return;

		Value = await MarkdownService.GetEnderalSampleAsync()
			.ConfigureAwait(false);
	}

	private static string? OverrideLink(LinkInline x) =>
		x.Url;
}